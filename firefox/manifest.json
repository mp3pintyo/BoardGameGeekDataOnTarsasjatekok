{
  "manifest_version": 2,
  "name": "BGG Rating Display",
  "version": "1.1",
  "description": "Displays BGG rating on tarsasjatekok.com",
  "icons": {
    "48": "icons/bgg-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tarsasjatekok.com/tarsasjatek/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "https://boardgamegeek.com/xmlapi2/"
  ]
}
