{
  "manifest_version": 2,
  "name": "BGG Rating Display",
  "version": "1.1",
  "description": "Displays BGG rating on tarsasjatekok.com",
  "applications": {
    "gecko": {
      "id": "bgg-rating-display@mp3pintyo.github.io"
    }
  },
  "icons": {
    "48": "icons/bgg-logo.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.tarsasjatekok.com/tarsasjatek/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "https://boardgamegeek.com/xmlapi2/"
  ]
}
